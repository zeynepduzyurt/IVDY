<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_x="199dp"
        android:layout_y="528dp"
        android:background="@drawable/login"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="597dp" />

    <TextView
        android:layout_width="159dp"
        android:layout_height="54dp"
        android:layout_x="123dp"
        android:layout_y="433dp"
        android:text="Feel well with us..."
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.745" />

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_x="23dp"
        android:layout_y="530dp"
        android:background="@drawable/signup"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="597dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="221dp"
        android:layout_height="152dp"
        android:layout_x="90dp"
        android:layout_y="82dp"
        app:srcCompat="@drawable/logo1"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="126dp"
        android:layout_height="89dp"
        android:layout_x="144dp"
        android:layout_y="247dp"
        android:text="IVDY"
        android:textAlignment="center"
        android:textColor="#3109e5"
        android:textSize="56sp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="329dp" />

</AbsoluteLayout>